<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_detail_container"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <ImageView
        android:id="@+id/activity_detail_movie_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_image_height"
        android:clickable="true"
        android:scaleType="fitXY"
        android:background="?attr/selectableItemBackgroundBorderless"
        />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         >
    <TextView
        android:id="@+id/activity_detail_movie_vote_average"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_detail_movie_title"
        android:paddingLeft="@dimen/movie_title_padding"
        android:paddingRight="@dimen/movie_title_padding"
        android:paddingBottom="@dimen/movie_rate_padding_bottom"
        android:textSize="@dimen/movie_vote_average"
        />
         <ToggleButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:checked="false"
             android:id="@+id/favorite_toggle_button"
             />
     </LinearLayout>
    <TextView
        android:id="@+id/activity_detail_movie_release_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_detail_movie_vote_average"
        android:paddingLeft="@dimen/movie_title_padding"
        android:paddingRight="@dimen/movie_title_padding"
        android:paddingTop="@dimen/movie_title_padding"
        android:textColor="@color/movie_title"
        android:textSize="@dimen/movie_vote_average"
        android:maxLines="1"
        />
    <TextView
        android:id="@+id/activity_detail_movie_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_detail_movie_release_date"
        android:paddingLeft="@dimen/movie_title_padding"
        android:paddingRight="@dimen/movie_title_padding"
        android:paddingTop="@dimen/movie_title_padding"
        android:textColor="@color/movie_title"
        android:textSize="@dimen/movie_vote_average"
        />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingLeft="8dp"
            android:id="@+id/trailer_recycler_view"
            >
        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:id="@+id/reviews_recycler_view"
            >
        </android.support.v7.widget.RecyclerView>

</LinearLayout>
</ScrollView>